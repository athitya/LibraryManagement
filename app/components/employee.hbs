<div class="container">
    <h3 class="mt-3">Employee</h3>
    <section >
        <div class="add-section">
            <button class="btn btn-outline-success float-right mx-3 my-2" data-toggle="modal" data-target="#exampleModal" 
            type="button" {{on "click" this.addEmployee}}>Add</button> 
        </div>
    </section>
    <section>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">S.No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each this.employeeList as |employee index|}}
                    <tr>
                        <th scope="row">{{addone index}}</th>
                        <td>{{employee.name}}</td>
                        <td>{{employee.email}}</td>
                    
                        <td>
                            <button class="btn btn-outline-primary " {{on "click" (fn this.updateEmployee employee index)}} type="submit"
                            data-toggle="modal" data-target="#exampleModal" >Update</button>
                            <button class="btn btn-outline-danger " type="submit" {{on "click" (fn this.deleteEmployee employee.id)}}>Delete</button>
                        </td>
                    </tr>
                    
                {{/each}}
            </tbody>
        </table>
    </section>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{if this.isEdit "Edit" "Add"}} Employee</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="">
            <div class="input-field">
                <label for="name">Name</label>
                <Input type="text" id="name" class="form-control" @value={{this.editEmployee.name}} />
                
            </div>
            <div class="input-field pt-3">
                <label for="name">Email</label>
                <Input type="text" id="name" class="form-control" @value={{this.editEmployee.email}} />
            </div>

        </form>
        {{#if this.errorMsg}}
        <div class="alert alert-danger mt-3" role="alert">
            {{this.errorMsg}}
        </div> 
        {{else if this.success}}
        <div class="alert alert-success mt-3" role="alert">
            {{this.success}}
        </div>
            
        {{/if}}
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" {{on "click" this.saveChanges}} >Save changes</button>
      </div>
    </div>
  </div>
</div>